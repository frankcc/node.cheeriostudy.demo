doctype
html(ng-app='demoApp')
  head
    meta(charset="utf-8")
    title .net拉钩采集
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(href="./libs/bootstrap/dist/css/bootstrap.min.css", rel="stylesheet")
    script(src="./libs/jquery-1.11.1.js")
    script(src="./libs/bootstrap/dist/js/bootstrap.min.js")
    script(src="./libs/angular-1.3.0.14/angular.js")
    script(src="./js/index.js")
  body
    .container(ng-controller='List')
      .row
        .page-header.clearfix
          h1= title
          .col-md-4
            small .net职位
       .row
          table.table.table-hover.table-bordered
            thead
              tr  
                th.col-md-1 岗位公司
                th.col-md-2 公司阶段
                th.col-md-2 公司规模
                th.col-md-2 高位薪资
                th.col-md-2 岗位最低经验
                th.col-md-2 职位诱惑
                th.col-md-1 查看
            tbody
              tr(ng-repeat="item in lists" ng-filter='to_trusted')
                  td(ng-bind-html="item.company | to_trusted")
                  td(ng-bind-html="item.period | to_trusted")
                  td(ng-bind-html="item.scale | to_trusted")
                  td(ng-bind-html="item.salary | to_trusted")
                  td(ng-bind-html="item.exp | to_trusted")
                  td(ng-bind-html="item.allure | to_trusted")
                  td: a(target="_blank", href="{{item.src}}") 查看 
        .row
          div.h1.col-md-offset-9 已加载数量{{lists.length}}
        .row
            button.btn.btn-default.col-md-offset-11.col-md-1(ng-click='load()') 加载信息
    